<h1>List of users</h1>

<form action="/insert_user_record" method="post">
  <label for="browser_username">Username</label>
  <input id="browser_username" type="text" name="input_username" placeholder="Enter a username...">

  <label for="browser_private">
    <input id="browser_private" type="checkbox" name="input_private"> Private?
  </label>

  <button>Add user</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.username %>
    </td>
    <td>
      <% if user.private == true %>
        Yes
      <% else %>
        No
      <% end %>
    </td>
    <td>
      <a href="/users/<%= user.username %>">Show details</a>
    </td>
  </tr>
  <% end %>
</table>
